{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "removeComments": true,
    "lib": ["ES2020", "DOM"],
  },
  "include": ["src/*/"],
  "exclude": ["node_modules"],
}
